{
  "root": ".\\.\\",
  "os": "auto",
  "output": {
    "mode": "both",
    "single_file": "structure&code.txt",
    "structure_file": "structure.txt",
    "code_file": "code.txt"
  },
  "clipboard": {
    "enabled": true,
    "text": "请阅读我提供的 structure&code.txt：先总结项目结构，再指出可改进的分层与边界，最后给出可落地的重构建议。"
  },
  "ignore": {
    "extensions": [
      ".dll", ".exe", ".pdb",
      ".png", ".jpg", ".jpeg", ".gif",
      ".zip", ".tar", ".gz",
      ".pdf"
    ],
    "patterns": [
      ".git/*",
      "bin/*",
      "obj/*",
      ".vs/*",
      ".idea/*",
      "structure&code.txt"
    ]
  }
}
